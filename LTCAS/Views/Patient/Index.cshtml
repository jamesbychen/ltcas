@model List<LTCAS.ViewModels.PatientBasicInfoViewModel>


@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/_menu.cshtml";
}


<p>
    @Ajax.ActionLink("新增住民管理", "../Patient/addBasic", new AjaxOptions { UpdateTargetId = "rendercontent", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" })
</p>
<table class="table table-striped">
    <tr>
        <th></th>
        <th>
            姓名
        </th>
        <th>
            身份證字號
        </th>
        <th>
            性別
        </th>
        <th>
            生日
        </th>
        <th>
            開案日期
        </th>
        <th>
            所屬單位
        </th>
        <th>
            轉介醫院
        </th>
        <th>
            結束日期
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "EditBasic", new { id = item.PatientSn })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastname)@Html.DisplayFor(modelItem => item.firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.socialID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.beginDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.shopNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fromHospital)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.closeDate)
            </td>
        </tr>
    }

</table>
